<script>
    document.getElementById('onPay').addEventListener('click',pay,false);

    async function pay()
    {
        var amt = "<%= amt %>"; 
        console.log(amt*100)
        var url = "/confirmOrder"
        var params = {
            amount: amt*100,
            currency: "INR",
            receipt: "V1",
            payment_capture: '1'
        };  
        var data =await axios.post(url,{params : params}) 
        console.log(data)
        var orderID = data.data.sub.id;
        var options = {
            "key": "<%= key %>",
            "currency": "INR",
            "name": "NSG",
            "description": "NSK Supermarket",
            "order_id": orderID,
            "handler": function(response) {
                console.log(response)
                if(response.razorpay_payment_id && response.razorpay_order_id && response.razorpay_signature)
                {
                    alert("Order Place")
                    var url = window.location.href
                    var domain = url.replace('http://','').replace('https://','').split(/[/?#]/)[0];
                    location.replace(`http://${domain}/convertOrders`)
                }
                else
                {
                    alert("Fail")
                }
            },
            "theme": {
                "color": "#0EB9F2"
            }
        };
        var rzp1 = new Razorpay(options);
        rzp1.open();
    }
</script>